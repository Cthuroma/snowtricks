{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Reset Password{% endblock %}

{% block body %}

        <h1 class="h3 mb-3 mt-5 text-center">Reset your password</h1>
    <div class="col-xs-12 col-md-6 m-auto">
        <div class="card">
            <div class="card-body">
                <form method="post" action="{{ path('app_reset_pass') }}">
                    {{ form_row(form.plainPassword) }}
                    {{ form_row(form.token) }}
                    <input class="btn btn-primary float-right" type="submit" value="Reset Password">
                    {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
