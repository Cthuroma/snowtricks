{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Login{% endblock %}

{% block body %}

    <h1 class="h3 mb-3 mt-5 text-center">Login</h1>
        <div class="col-xs-12 col-md-6 m-auto">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="form-group">
                            <label for="inputEmail">Email</label>
                            <input type="email" name="email" value="{{ last_username }}" id="inputEmail" class="form-control" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" required>
                        </div>
                        <a class="float-left" data-toggle="modal" data-target="#exampleModal" href="#">Forgot Password ?</a>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <button class="btn btn-primary float-right" type="submit">
                            Sign in
                        </button>
                    </form>
                </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Forgot Password ?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    If there is an account bound to this address, an email will be sent with instructions to reset your password.
                    <form method="post" action="{{ path('reset_password') }}">
                    {{ form_row(reset_form.email) }}

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <input class="btn btn-primary" type="submit" value="Confirm">
                    {{ form_end(reset_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
