{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<main role="main">
    <div class="container-fluid home-cover" style="background-image: url({{ asset('images/cover.jpg') }}">
        <div class="row">
            <div class="col-12">
                <h1 class="mt-5 text-center text-white">Snowboard is cool</h1>
            </div>
        </div>
        <a href="#tricks" class="btn btn-primary scroll-back-button"><i class="fas fa-arrow-alt-circle-down"></i></a>
    </div>

    <div class="container-fluid" id="tricks">
        <div class="row no-gutters justify-content-around">
            {% for trick in tricks %}
            <div class="col-md-2">
                <div class="card mb-4 shadow-sm">
                    <a href="{{ '/trick/'~trick.id }}">
                        <img class="bd-placeholder-img card-img-top" width="100%" height="150" src="{{ asset('images/'~trick.images[0].path) }}" />
                    </a>
                    <div class="card-body">
                        <p class="card-text">{{ trick.name }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                {%  if app.user != null %}
                                <a class="btn btn-sm btn-outline-secondary" href="{{ '/trick/edit/'~trick.id }}"><i class="fas fa-pen"></i>
                                <a class="btn btn-sm btn-outline-secondary" href="#"><i class="fas fa-trash"></i></a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {%  endfor %}
        </div>
        <div class="row justify-content-center">
            <button class="btn btn-primary">Load More</button>
        </div>
    </div>
</main>

{% endblock %}


